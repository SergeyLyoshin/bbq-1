<div class="col-md-12 justify-content-between align-items-center d-flex-custom">
  <div>
    <%- if controller_name != 'sessions' %>
      <%= link_to t('.log_in'), new_session_path(resource_name) %><br />
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to t('.signed_up'), new_registration_path(resource_name) %><br />
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to t('.forgot_password'), new_password_path(resource_name) %><br />
    <% end %>
  </div>
  <div class="mobile-padding">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to image_tag(oauth_logo(provider), class: 'oauth-icon'), omniauth_authorize_path(resource_name, provider), method: :post %>
      <% end %>
    <% end %>
  </div>
</div>